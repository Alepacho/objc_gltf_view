
BasedOnStyle: LLVM
UseCRLF: false

ColumnLimit: 800

UseTab: Always
IndentWidth: 4
TabWidth: 4

IndentCaseLabels: true

AllowShortIfStatementsOnASingleLine: true
AllowShortFunctionsOnASingleLine: false
AllowShortEnumsOnASingleLine: false
